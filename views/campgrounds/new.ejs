<% layout('layouts/boilerplate') %>

<div class="bg-gradient-to-br from-forest-50 to-earth-50 min-h-screen py-12">
  <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
    
    <!-- Header -->
    <div class="text-center mb-8">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
        Add New <span class="text-forest-600">Campground</span>
      </h1>
      <p class="text-lg text-gray-600">
        Share your favorite camping spot with the community
      </p>
    </div>

    <!-- Form Card -->
    <div class="bg-white rounded-2xl shadow-xl p-8 md:p-10">
      <form action="/campgrounds" method="POST" class="space-y-6">
        
        <!-- Campground Title -->
        <div>
          <label for="title" class="block text-sm font-semibold text-gray-700 mb-2">
            Campground Name <span class="text-red-500">*</span>
          </label>
          <input type="text" 
                 id="title" 
                 name="title" 
                 required
                 placeholder="e.g., Forest Lake Campground"
                 class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-forest-500 focus:border-transparent outline-none transition-shadow">
          <p class="mt-1 text-sm text-gray-500">Give your campground a catchy, descriptive name</p>
        </div>

        <!-- Location -->
        <div>
          <label for="location" class="block text-sm font-semibold text-gray-700 mb-2">
            Location <span class="text-red-500">*</span>
          </label>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
            </div>
            <input type="text" 
                   id="location" 
                   name="location" 
                   required
                   placeholder="e.g., Trakai, Vilnius County"
                   class="w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-forest-500 focus:border-transparent outline-none transition-shadow">
          </div>
          <p class="mt-1 text-sm text-gray-500">City, municipality, or region</p>
        </div>

        <!-- Image URL -->
        <div>
          <label for="image" class="block text-sm font-semibold text-gray-700 mb-2">
            Image URL <span class="text-red-500">*</span>
          </label>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
            </div>
            <input type="url" 
                   id="image" 
                   name="image" 
                   required
                   placeholder="https://example.com/image.jpg"
                   class="w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-forest-500 focus:border-transparent outline-none transition-shadow">
          </div>
          <p class="mt-1 text-sm text-gray-500">Add a high-quality image URL of your campground</p>
        </div>

        <!-- Price -->
        <div>
          <label for="price" class="block text-sm font-semibold text-gray-700 mb-2">
            Price per Night <span class="text-red-500">*</span>
          </label>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <span class="text-gray-500 text-lg">$</span>
            </div>
            <input type="number" 
                   id="price" 
                   name="price" 
                   min="0"
                   step="0.01"
                   required
                   placeholder="25.00"
                   class="w-full pl-8 pr-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-forest-500 focus:border-transparent outline-none transition-shadow">
          </div>
          <p class="mt-1 text-sm text-gray-500">Enter the nightly rate in USD</p>
        </div>

        <!-- Description -->
        <div>
          <label for="description" class="block text-sm font-semibold text-gray-700 mb-2">
            Description <span class="text-red-500">*</span>
          </label>
          <textarea id="description" 
                    name="description" 
                    rows="5"
                    required
                    placeholder="Describe your campground, its amenities, surroundings, and what makes it special..."
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-forest-500 focus:border-transparent outline-none resize-none transition-shadow"></textarea>
          <p class="mt-1 text-sm text-gray-500">Provide detailed information to help campers decide (min. 20 characters)</p>
        </div>

        <!-- Divider -->
        <div class="border-t border-gray-200 pt-6"></div>

        <!-- Action Buttons -->
        <div class="flex flex-col sm:flex-row gap-4">
          <button type="submit" 
                  class="flex-1 bg-forest-600 hover:bg-forest-700 text-white py-3.5 px-6 rounded-lg font-semibold transition-all transform hover:scale-[1.02] shadow-md hover:shadow-lg">
            <span class="flex items-center justify-center">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
              </svg>
              Create Campground
            </span>
          </button>
          <a href="/campgrounds" 
             class="flex-1 bg-gray-100 hover:bg-gray-200 text-gray-700 py-3.5 px-6 rounded-lg font-semibold transition-colors text-center">
            Cancel
          </a>
        </div>
      </form>
    </div>

    <!-- Help Text -->
    <div class="mt-8 bg-blue-50 border border-blue-200 rounded-xl p-6">
      <div class="flex">
        <svg class="w-6 h-6 text-blue-500 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <div>
          <h3 class="text-sm font-semibold text-blue-900 mb-1">Tips for a great listing</h3>
          <ul class="text-sm text-blue-800 space-y-1">
            <li>• Use high-resolution images that showcase your campground</li>
            <li>• Write a detailed description including amenities and nearby attractions</li>
            <li>• Set a competitive price based on similar campgrounds in your area</li>
            <li>• Be specific about the location to help campers find you easily</li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>