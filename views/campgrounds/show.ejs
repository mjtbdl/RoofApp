<% layout('layouts/boilerplate') %>

<div class="bg-gray-50 min-h-screen">
  <!-- Back Button -->
  <div class="bg-white border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
      <a href="/campgrounds" class="inline-flex items-center text-gray-600 hover:text-forest-600 transition-colors">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Back to Campgrounds
      </a>
    </div>
  </div>

  <!-- Main Content -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      
      <!-- Left Column - Main Content -->
      <div class="lg:col-span-2 space-y-6">
        
        <!-- Image Section -->
        <div class="bg-white rounded-xl shadow-md overflow-hidden">
          <div class="relative h-96">
            <img src="<%= campground.image %>" 
                 alt="<%= campground.title %>" 
                 class="w-full h-full object-cover"
                 onerror="this.src='https://images.unsplash.com/photo-1478131143081-80f7f84ca84d?w=1200'">
          </div>
        </div>

        <!-- Title and Details -->
        <div class="bg-white rounded-xl shadow-md p-6">
          <div class="flex justify-between items-start mb-4">
            <div class="flex-1">
              <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-2">
                <%= campground.title %>
              </h1>
              <div class="flex items-center text-gray-600 mb-4">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                <span class="text-lg"><%= campground.location %></span>
              </div>
            </div>
            <div class="text-right">
              <div class="text-3xl font-bold text-forest-600">$<%= campground.price %></div>
              <div class="text-gray-600">per night</div>
            </div>
          </div>

          <!-- Host Info -->
          <div class="border-t border-gray-200 pt-4">
            <div class="flex items-center">
              <div class="w-12 h-12 bg-forest-100 rounded-full flex items-center justify-center mr-3">
                <span class="text-forest-700 font-bold text-lg"><%= campground.author.username.charAt(0).toUpperCase() %></span>
              </div>
              <div>
                <p class="text-sm text-gray-600">Hosted by</p>
                <p class="font-semibold text-gray-900"><%= campground.author.username %></p>
              </div>
            </div>
          </div>
        </div>

        <!-- Description -->
        <div class="bg-white rounded-xl shadow-md p-6">
          <h2 class="text-2xl font-bold text-gray-900 mb-4">About this campground</h2>
          <p class="text-gray-700 leading-relaxed">
            <%= campground.description %>
          </p>
        </div>

        <!-- Reviews Section -->
        <div class="bg-white rounded-xl shadow-md p-6">
          <h2 class="text-2xl font-bold text-gray-900 mb-6">
            Reviews (<%= campground.reviews.length %>)
          </h2>

          <!-- Reviews List -->
          <% if (campground.reviews.length === 0) { %>
            <div class="text-center py-8 bg-gray-50 rounded-lg">
              <svg class="w-16 h-16 mx-auto text-gray-400 mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"></path>
              </svg>
              <p class="text-gray-600">No reviews yet. Be the first to review!</p>
            </div>
          <% } else { %>
            <div class="space-y-6">
              <% campground.reviews.forEach(function(review) { %>
                <div class="border-b border-gray-200 pb-6 last:border-0 last:pb-0">
                  <div class="flex justify-between items-start mb-3">
                    <div class="flex items-center">
                      <div class="w-10 h-10 bg-forest-100 rounded-full flex items-center justify-center mr-3">
                        <span class="text-forest-700 font-semibold"><%= review.author.username.charAt(0).toUpperCase() %></span>
                      </div>
                      <div>
                        <p class="font-semibold text-gray-900"><%= review.author.username %></p>
                        <div class="flex items-center mt-1">
                          <!-- Star Rating -->
                          <% for(let i = 1; i <= 10; i++) { %>
                            <svg class="w-4 h-4 <%= i <= review.rating ? 'text-yellow-400' : 'text-gray-300' %>" fill="currentColor" viewBox="0 0 20 20">
                              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                            </svg>
                          <% } %>
                          <span class="ml-2 text-sm text-gray-600"><%= review.rating %>/10</span>
                        </div>
                      </div>
                    </div>
                    <% if (currentUser && currentUser._id.equals(review.author._id)) { %>
                      <form action="/campgrounds/<%= campground._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
                        <button type="submit" class="text-red-500 hover:text-red-700 text-sm font-medium transition-colors">
                          Delete
                        </button>
                      </form>
                    <% } %>
                  </div>
                  <p class="text-gray-700 leading-relaxed ml-13"><%= review.body %></p>
                </div>
              <% }); %>
            </div>
          <% } %>
        </div>

        <!-- Add Review Form -->
        <div class="bg-white rounded-xl shadow-md p-6">
          <h3 class="text-xl font-bold text-gray-900 mb-4">Leave a Review</h3>
          
          <% if (currentUser) { %>
            <form action="/campgrounds/<%= campground._id %>/reviews" method="POST" class="space-y-4">
              <!-- Rating -->
              <div>
                <label for="rating" class="block text-sm font-semibold text-gray-700 mb-2">
                  Rating (1-10)
                </label>
                <input type="range" 
                       name="rating" 
                       id="rating" 
                       min="1" 
                       max="10" 
                       value="5"
                       class="w-full h-2 bg-gray-200 rounded-lg appearance-none cursor-pointer accent-forest-600"
                       oninput="document.getElementById('rating-value').textContent = this.value">
                <div class="flex justify-between text-sm text-gray-600 mt-1">
                  <span>1</span>
                  <span class="font-semibold text-forest-600" id="rating-value">5</span>
                  <span>10</span>
                </div>
              </div>

              <!-- Review Text -->
              <div>
                <label for="body" class="block text-sm font-semibold text-gray-700 mb-2">
                  Your Review
                </label>
                <textarea name="body" 
                          id="body" 
                          rows="4" 
                          required
                          placeholder="Share your experience at this campground..."
                          class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-forest-500 focus:border-transparent outline-none resize-none"></textarea>
              </div>

              <!-- Submit Button -->
              <button type="submit" 
                      class="w-full bg-forest-600 hover:bg-forest-700 text-white py-3 rounded-lg font-semibold transition-colors shadow-md hover:shadow-lg">
                Submit Review
              </button>
            </form>
          <% } else { %>
            <div class="text-center py-6 bg-gray-50 rounded-lg">
              <p class="text-gray-600 mb-4">Please log in to leave a review</p>
              <a href="/login" class="inline-block bg-forest-600 hover:bg-forest-700 text-white px-6 py-2 rounded-lg font-semibold transition-colors">
                Log In
              </a>
            </div>
          <% } %>
        </div>
      </div>

      <!-- Right Column - Sidebar -->
      <div class="lg:col-span-1">
        <div class="sticky top-24 space-y-6">
          
          <!-- Action Buttons -->
          <% if (currentUser && currentUser._id.equals(campground.author._id)) { %>
            <div class="bg-white rounded-xl shadow-md p-6">
              <h3 class="text-lg font-semibold text-gray-900 mb-4">Manage Campground</h3>
              <div class="space-y-3">
                <a href="/campgrounds/<%= campground._id %>/edit" 
                   class="block w-full text-center bg-forest-600 hover:bg-forest-700 text-white py-2.5 rounded-lg font-medium transition-colors">
                  Edit Campground
                </a>
                <form action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
                  <button type="submit" 
                          onclick="return confirm('Are you sure you want to delete this campground?')"
                          class="w-full bg-red-50 hover:bg-red-100 text-red-600 py-2.5 rounded-lg font-medium transition-colors">
                    Delete Campground
                  </button>
                </form>
              </div>
            </div>
          <% } %>

          <!-- Map Placeholder -->
          <div class="bg-white rounded-xl shadow-md p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Location</h3>
            <div class="aspect-w-16 aspect-h-12 bg-gray-200 rounded-lg flex items-center justify-center">
              <div class="text-center text-gray-500">
                <svg class="w-12 h-12 mx-auto mb-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"></path>
                </svg>
                <p class="text-sm">Map coming soon</p>
              </div>
            </div>
            <p class="text-sm text-gray-600 mt-3"><%= campground.location %></p>
          </div>

          <!-- Contact Host -->
          <div class="bg-forest-50 rounded-xl p-6 border border-forest-200">
            <h3 class="text-lg font-semibold text-gray-900 mb-2">Questions?</h3>
            <p class="text-sm text-gray-600 mb-4">Contact the host for more information about this campground.</p>
            <button class="w-full bg-white hover:bg-gray-50 text-forest-600 border-2 border-forest-600 py-2.5 rounded-lg font-medium transition-colors">
              Contact Host
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>