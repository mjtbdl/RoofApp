<% layout('layouts/boilerplate') %>
  <title>Edit Campground</title>
  <h1>Edit Campground</h1>
  <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
    <label for="title">Title:</label>
    <input type="text" id="title" name="title" value="<%= campground.title %>" required>
    <label for="image">Image URL:</label>
    <input type="text" id="image" name="image" value="<%= campground.image %>" required>
    <label for="location">Location:</label>
    <input type="text" id="location" name="location" value="<%= campground.location %>" required>
    <label for="price">Price:</label>
    <input type="text" id="price" name="price" value="<%= campground.price %>" required>
    <label for="description">Description:</label>
    <textarea id="description" name="description" required><%= campground.description %></textarea>
    <button type="submit">Update Campground</button>
  </form>
  <a href="/campgrounds/<%= campground._id %>">Cancel</a>