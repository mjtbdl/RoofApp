<% layout('layouts/boilerplate') %>

<!-- Page Header -->
<section class="bg-gradient-to-r from-forest-600 to-forest-700 py-16">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">
        Explore Campgrounds
      </h1>
      <p class="text-xl text-forest-100 max-w-2xl mx-auto">
        Discover amazing camping destinations across Lithuania
      </p>
    </div>
  </div>
</section>

<!-- Search and Filter Section -->
<section class="bg-white shadow-sm sticky top-16 z-40 border-b border-gray-200">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
    <div class="flex flex-col md:flex-row gap-4 items-center justify-between">
      <!-- Search Bar -->
      <div class="w-full md:w-96">
        <div class="relative">
          <input type="text" 
                 placeholder="Search campgrounds..." 
                 class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-forest-500 focus:border-transparent outline-none">
          <svg class="absolute left-3 top-2.5 w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
          </svg>
        </div>
      </div>
      
      <!-- Filter and Sort -->
      <div class="flex gap-3 w-full md:w-auto">
        <select class="px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-forest-500 focus:border-transparent outline-none bg-white">
          <option>All Counties</option>
          <option>Vilnius County</option>
          <option>Kaunas County</option>
          <option>KlaipÄ—da County</option>
        </select>
        <select class="px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-forest-500 focus:border-transparent outline-none bg-white">
          <option>Sort by: Newest</option>
          <option>Price: Low to High</option>
          <option>Price: High to Low</option>
          <option>Name: A-Z</option>
        </select>
      </div>
    </div>
  </div>
</section>

<!-- Campgrounds Grid -->
<section class="py-12 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    
    <!-- Results Count -->
    <div class="mb-8 flex justify-between items-center">
      <p class="text-gray-600">
        Showing <span class="font-semibold text-gray-900"><%= campgrounds.length %></span> campgrounds
      </p>
      <a href="/campgrounds/new" class="bg-forest-600 hover:bg-forest-700 text-white px-6 py-2 rounded-lg font-medium transition-colors shadow-md hover:shadow-lg">
        + Add Campground
      </a>
    </div>
    
    <!-- Grid -->
    <% if (campgrounds.length === 0) { %>
      <!-- Empty State -->
      <div class="text-center py-20">
        <svg class="w-24 h-24 mx-auto text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
        </svg>
        <h3 class="text-2xl font-bold text-gray-900 mb-2">No campgrounds found</h3>
        <p class="text-gray-600 mb-6">Be the first to add a campground!</p>
        <a href="/campgrounds/new" class="inline-block bg-forest-600 hover:bg-forest-700 text-white px-8 py-3 rounded-lg font-semibold transition-colors">
          Add First Campground
        </a>
      </div>
    <% } else { %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <% campgrounds.forEach(campground => { %>
          <div class="bg-white rounded-xl shadow-md hover:shadow-xl transition-all duration-300 overflow-hidden group">
            <!-- Image Container -->
            <div class="relative h-64 overflow-hidden">
              <a href="/campgrounds/<%= campground._id %>">
                <img src="<%= campground.image %>" 
                     alt="<%= campground.title %>" 
                     class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-500"
                     onerror="this.src='https://images.unsplash.com/photo-1478131143081-80f7f84ca84d?w=800'">
              </a>
              
              <!-- Price Badge -->
              <div class="absolute top-4 right-4 bg-white/95 backdrop-blur-sm px-4 py-2 rounded-full shadow-lg">
                <span class="text-forest-700 font-bold text-lg">$<%= campground.price %></span>
                <span class="text-gray-600 text-sm">/night</span>
              </div>
            </div>
            
            <!-- Card Content -->
            <div class="p-6">
              <!-- Title -->
              <a href="/campgrounds/<%= campground._id %>" class="block">
                <h3 class="text-xl font-bold text-gray-900 mb-2 group-hover:text-forest-600 transition-colors line-clamp-1">
                  <%= campground.title %>
                </h3>
              </a>
              
              <!-- Location -->
              <div class="flex items-center text-gray-600 mb-3">
                <svg class="w-4 h-4 mr-1.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                <span class="text-sm line-clamp-1"><%= campground.location %></span>
              </div>
              
              <!-- Description -->
              <p class="text-gray-600 text-sm mb-4 line-clamp-2 leading-relaxed">
                <%= campground.description %>
              </p>
              
              <!-- View Details Button -->
              <a href="/campgrounds/<%= campground._id %>" 
                 class="block w-full text-center bg-forest-50 hover:bg-forest-600 text-forest-700 hover:text-white py-2.5 rounded-lg font-medium transition-all">
                View Details
              </a>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>
</section>

<!-- Additional CSS for line-clamp -->
<style>
  .line-clamp-1 {
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>